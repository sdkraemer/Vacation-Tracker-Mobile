<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WhereYouAtMobile.Pages.MomentPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Post a Moment!"/>
            <Label x:Name="StatusLabel" />
            <Entry x:Name="TwitterUrlEntry" Placeholder="Twitter URL" ></Entry>
            <Editor x:Name="MessageEditor"></Editor>
            <Button x:Name="PostButton" Text="Post"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>